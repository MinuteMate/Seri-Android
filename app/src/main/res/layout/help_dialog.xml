<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v51"
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:background="@drawable/bg_dialog_help_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v81"
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_help_dialog_outline"
        app:layout_constraintBottom_toBottomOf="@+id/v51"
        app:layout_constraintEnd_toEndOf="@+id/v51"
        app:layout_constraintStart_toStartOf="@+id/v51"
        app:layout_constraintTop_toTopOf="@+id/v51" />

    <TextView
        android:id="@+id/tvPageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="게임 방법 [1/6]"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/v81"
        app:layout_constraintTop_toTopOf="@+id/v81" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/neodgm_pro"
        android:text="등록 단계"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/v81"
        app:layout_constraintStart_toStartOf="@+id/v81"
        app:layout_constraintTop_toTopOf="@+id/v81" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:text="설명설명설명"
        android:textColor="#DDDDDD"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/v81"
        app:layout_constraintStart_toStartOf="@+id/v81"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <LinearLayout
        android:id="@+id/lnNext"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/v81"
        app:layout_constraintEnd_toEndOf="@+id/v81">

        <TextView
            android:id="@+id/tvNextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neodgm_pro"
            android:text="다음 단계"
            android:textColor="#DDDDDD"
            android:textSize="16dp" />

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_help_next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>